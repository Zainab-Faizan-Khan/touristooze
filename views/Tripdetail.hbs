    <!--slider files-->
    <link rel="stylesheet" href="/lsfile/lightslider.css">
    
    <script src="/lsfile/lightslider.js"></script>

</head>
    <body>
        <body onload="loadfun()">
    <div id="loading">
  <div class="load1" ></div>
  <div class="load2"></div>
  <div class="load3"></div>
  <div class="load4"></div>
  <div class="load5"></div>
</div>
<div class="container" id="myDiv" >
  <h3 class="note">Click the back button to go back and edit trip!</h3>
<div class="info">
<h1>TRIP NO:{{tripno}}</h1>
<h1>NAME:{{name}}</h1>
<h1>PAYMENT TOTAL:{{pay}}</h1>
</div>

<button  id="continueBtn" onclick="window.location.href='/Payment'">Continue</button>
<button   id="cancelBtn" >Cancel Trip</button><form id="cancel" method="POST" action="/auth/canceltrip"></form>
<div class="warn"><p>This will clear all Data</p><br>
<button  id="YesBtn" >Yes</button>
<button  id="NoBtn" >No</button>
</div>

{{#each city}}
<div class="city" id="tandoadam">
      <img src="/img/payment/close.png" alt="close" class="close daba" id="close2"onclick="this.parentNode.style.display='none'">
          
          
          
                   <label for="check20">
            <input id="check20" type="checkbox" value="tandoadam" class="checkbox" name="city" style="visibilty:visible">
            <div class="checkb">
              <div class="check"></div>
              <h4>Add to <br>Wishlist!</h4>
            </div>
          </label>
          <div class="DIV">
            
            <div class="cimg">
              <img src="/Sindh/logos/tandoadam.jpg" alt="">
            </div>
            <h1 class="cname">{{this}}</h1>
          </div>
      

          <div class="places">
          
        
            <div class="DIV">
            
            <div class="pimg">
              <img src="" alt="">
            </div>
            <h1 class="pname"> </h1>
          </div>
          <h2>Activities:</h2>
          <h3></h3><br>
  
          <h2>Ratings:</h2>
          <h3></h3><br>
          </div>
  </div> 
</div>
{{/each}}


</div>
<script>
   $(document).on("click","#NoBtn", function (){$('.warn').css("display","none");})
 $(document).on("click","#cancelBtn", function () {$('.warn').css("display","block");})

  $(document).on("click","#YesBtn", function () {
   $('#cancel').submit();})
</script>
  <script>
  function loadfun() {
  myVar = setTimeout(showPage, 3000);
}

function showPage() {
  document.getElementById("loading").style.display = "none";
  document.getElementById("myDiv").style.display = "block";
  document.body.style.overflow="visible";
}

</script>

    </body>
</html>